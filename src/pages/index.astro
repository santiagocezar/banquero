---
import "../style/reset.css";
import "../style/palettes.less";
import { Recents } from "../components/Recents";

import Base from "../layouts/Base.astro";
---

<Base title="Score">
  <h1>
    <img class="Score" src="/logo.svg" alt="Score" />
  </h1>
  <a class="new" href="/game">Nueva partida</a>
  <h2>Partidas recientes</h2>
  <div class="recents">
    <Recents client:only />
  </div>
</Base>

<style lang="less">
  body {
    margin: 0 auto;
    max-width: 50rem;
  }
  h1 {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 5rem;
    flex-shrink: 0;
    img {
      height: 2rem;
    }
  }
  h2 {
    text-align: center;
    font-weight: bold;
    font-size: 1.5rem;
  }
  .new {
    background-color: var(--blue);
    color: white;
    margin: 1rem;
    padding: 1rem;
    font-size: 2rem;
    text-align: center;
    border-radius: 2rem;
    font-weight: bold;
    display: block;
    flex-shrink: 0;
  }
  .recents {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    gap: 1rem;
    overflow: auto;
  }
</style>
