<style lang="less">
  body {
    margin: 0 auto;
    max-width: 50rem;
    overflow: auto;
  }
  h1 {
    display: flex;
    flex-direction: row;
    gap: .5em;
    justify-content: center;
    align-items: center;
    height: 6rem;
    text-align: center;
    font-family: "Poppins";
    font-size: 2rem;
    flex-shrink: 0;
    user-select: none;
    img {
      height: 1.375em;
    }
  }
  .new {
    background-color: var(--blue);
    color: white;
    margin: 1rem;
    padding: 1rem;
    font-size: 2rem;
    text-align: center;
    border-radius: 2rem;
    font-weight: bold;
    display: block;
    flex-shrink: 0;
  }
  footer {
    display: flex;
    padding: 2rem;
    justify-content: center;
  }
</style>
