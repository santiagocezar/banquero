---
import "../style/global.less";

import { ClientRouter } from 'astro:transitions';
import { pwaInfo } from 'virtual:pwa-info';
import IconSet from "../components/IconSet.astro";
import Reload from "../components/Reload.svelte";

interface Props {
  title: string;
}
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple180.png" sizes="180x180" />
    <!-- <link rel="mask-icon" href="/mask-icon.svg" color="#FFFFFF" /> -->
    <meta name="description" content="El contador del truco por excelencia." />
    <meta id="theme-color" name="theme-color" content="#fe1e6e" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&family=Poppins:wght@700;900&display=swap"
      rel="stylesheet"
    />
    <title>Trucomatic</title>
    <script async src="https://analytics.umami.is/script.js" data-website-id="2caa0867-f528-4c96-bccc-0ebe3ceec902"></script>
    <ClientRouter />
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
  </head>
  <body>
    <IconSet pack="material-symbols" prefix="ic" names={[
      "swords",
      "delete",
      "close",
    ]} />
    <Reload client:only />
    <slot />
  </body>
  <script src="../lib/theme-color.ts">
</html>

<style>
  body {
    display: flex;
    overflow: hidden;
    font-family: "Inter", sans-serif;
    flex-direction: column;
    height: 100%;
  }
</style>
